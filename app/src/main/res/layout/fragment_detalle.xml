<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    >

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/nombre"
        android:textSize="@dimen/tamano_nombre"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        >
        <ImageView
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_twitter_size"
            android:src="@drawable/ic_twitter"/>

        <TextView
            android:id="@+id/tvTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twitter_account_size"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        >
        <ImageView
            android:id="@+id/phone"
            android:layout_width="@dimen/icon_twitter_size"
            android:layout_height="@dimen/icon_twitter_size"
            android:src="@drawable/ic_telefono"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twitter_account_size"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

</LinearLayout>
